{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "tests",
    "src"
  ]
}
