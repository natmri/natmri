{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "Node",
    "lib": [
      "ES6"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "types": [
      "node",
      "eevi/eevi-is",
      "electron"
    ],
    "paths": {
      "~/*": [
        "./*"
      ],
      "@app/compat-common": [
        "../compat/common/index.ts"
      ],
      "@app/compat-browser": [
        "../compat/browser/index.ts"
      ],
      "@app/compat-node": [
        "../compat/node/index.ts"
      ],
      "@app/compat-i18n": [
        "../compat/i18n/index.ts"
      ],
      "@app/framework": [
        "../framework/electron/index.ts"
      ]
    }
  },
  "exclude": [
    "tests"
  ]
}
