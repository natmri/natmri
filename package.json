{
  "name": "@natmri/repo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@7.14.2",
  "description": "Multi platform wallpaper-engine based on electron",
  "author": "starknt",
  "license": "MIT",
  "keywords": [
    "electron"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "build": "pnpm clean && vite build",
    "clean": "esno scripts/clean-cli.ts",
    "dev": "cross-env NATMRI_DEV='1' vite",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "package": "pnpm build && esno ./scripts/make-installer.ts",
    "postinstall": "electron-builder install-app-deps && esno ./scripts/link-modules.ts && esno ./scripts/electron-rebuild.ts",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "release": "bumpp package.json release/app/package.json --commit --push --tag",
    "test": "pnpm build && cross-env NATMRI_DEV='1' vitest run --passWithNoTests",
    "test:e2e": "pnpm build && cross-env NATMRI_DEV='1' vitest run e2e --passWithNoTests",
    "test:unit": "vitest run unit --passWithNoTests",
    "test:watch": "vitest -u",
    "typecheck": "npx tsc --noEmit -p ./src/tsconfig.json"
  },
  "dependencies": {
    "i18next": "^22.4.5",
    "minimist": "^1.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "yauzl": "^2.10.0",
    "yazl": "^2.5.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.34.0",
    "@eevi/elexpose": "0.6.2",
    "@electron/rebuild": "^3.2.10",
    "@types/better-sqlite3": "^7.6.3",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.11.17",
    "@types/node-abi": "^3.0.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/rimraf": "^3.0.2",
    "@types/yauzl": "^2.10.0",
    "@types/yazl": "^2.4.2",
    "@unocss/preset-attributify": "^0.48.0",
    "@unocss/transformer-attributify-jsx": "^0.48.0",
    "@vitejs/plugin-react-swc": "^3.0.1",
    "bumpp": "^8.2.1",
    "concurrently": "^7.6.0",
    "consola": "^2.15.3",
    "cross-env": "^7.0.3",
    "eevi": "^0.6.2",
    "electron": "^21.3.3",
    "electron-builder": "^23.6.0",
    "eslint": "^8.30.0",
    "esno": "^0.16.3",
    "happy-dom": "^8.1.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "node-abi": "^3.30.0",
    "playwright": "^1.28.0",
    "pnpm": "7.18.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4",
    "unocss": "^0.48.0",
    "vite": "^4.0.3",
    "vitest": "^0.26.2"
  },
  "pnpm": {
    "overrides": {
      "asar": "npm:@electron/asar@latest",
      "sourcemap-codec": "npm:@jridgewell/sourcemap-codec@latest",
      "@npmcli/move-file": "npm:@npmcli/fs@latest"
    }
  },
  "lint-staged": {
    "*.{ts, tsx, js, jsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "eslint --fix"
    ],
    "*.yml": [
      "eslint --fix"
    ]
  },
  "build": {
    "directories": {
      "app": "release/app",
      "output": "release/build"
    }
  }
}
