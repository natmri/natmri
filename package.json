{
  "name": "@natmri/repo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@7.14.2",
  "description": "Multi platform wallpaper-engine based on electron",
  "author": "starknt",
  "license": "MIT",
  "keywords": [
    "electron"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "build": "nr clean && vite build",
    "clean": "esno scripts/clean-cli.ts",
    "dev": "nr clean && cross-env NATMRI_DEV='1' vite",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "package": "nr build && esno ./scripts/publish.ts",
    "postinstall": "electron-builder install-app-deps && esno ./scripts/link-modules.ts && esno ./scripts/electron-rebuild.ts",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "release": "bumpp package.json app/package.json --commit --push --tag",
    "test": "pnpm build && cross-env NATMRI_DEV='1' NATMRI_TEST='1' vitest run --passWithNoTests",
    "test:watch": "cross-env NATMRI_DEV='1' NATMRI_TEST='1' vitest -u",
    "typecheck": "npx tsc --noEmit -p ./src/tsconfig.json"
  },
  "dependencies": {
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.36.0",
    "@antfu/ni": "^0.20.0",
    "@eevi/elexpose": "^0.7.0-beta.3",
    "@electron/rebuild": "^3.2.10",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/better-sqlite3": "^7.6.3",
    "@types/node": "^18.15.3",
    "@types/yauzl": "^2.10.0",
    "bumpp": "^9.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eevi": "^0.7.0-beta.3",
    "electron": "^21.4.1",
    "electron-builder": "^23.6.0",
    "eslint": "^8.36.0",
    "esno": "^0.16.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "pnpm": "7.29.3",
    "solid-js": "^1.6.15",
    "source-map-support": "^0.5.21",
    "typescript": "^5.0.2",
    "unocss": "^0.50.6",
    "vite": "4.2.0",
    "vite-plugin-solid": "^2.6.1",
    "vitest": "^0.29.3",
    "yaml": "^2.2.1"
  },
  "pnpm": {
    "overrides": {
      "sourcemap-codec": "npm:@jridgewell/sourcemap-codec@latest",
      "@npmcli/move-file": "npm:@npmcli/fs@latest"
    }
  },
  "lint-staged": {
    "*.{ts, tsx}": [
      "eslint --fix"
    ],
    "*.{json, yml, yaml}": [
      "eslint --fix"
    ]
  },
  "build": {
    "directories": {
      "app": "app",
      "output": "out-build"
    }
  }
}
