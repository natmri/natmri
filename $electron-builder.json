{
  "$schema": "http://json.schemastore.org/electron-builder",
  "productName": "natmri",
  "appId": "personal.starknt.natmri",
  "asar": true,
  "npmRebuild": false,
  "forceCodeSigning": false,
  "asarUnpack": "**\\*.{dll, node}",
  "files": [
    "out",
    "!**/*.{ts, rs}",
    "!node_modules",
    "!pnpm-lock.{yaml, yml}",
    "node_modules/sqlite3/lib",
    "node_modules/sqlite3/package.json",
    "node_modules/@natmri",
    "package.json"
  ],
  "copyright": "Copyright Â© 2022 ${author}",
  "dmg": {
    "icon": "buildResources/icons/icon.icns"
  },
  "nsis": {
    "shortcutName": "NaoTomori",
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "artifactName": "${productName}-${version}-${os}-${arch}-Setup.${ext}",
    "include": "buildResources/windows/installer.nsh"
  },
  "portable": {
    "artifactName": "${productName}-portable-${version}.${ext}"
  },
  "win": {
    "icon": "buildResources/icons/icon.ico",
    "artifactName": "${productName}-win-${arch}-${version}.${ext}",
    "target": ["nsis", "portable"],
    "publisherName": "starknt"
  },
  "mac": {
    "icon": "buildResources/icons/icon.icns",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "type": "distribution",
    "category": "public.app-category.productivity",
    "darkModeSupport": true,
    "gatekeeperAssess": false,
    "electronLanguages": [
      "en",
      "fr",
      "zh_CN",
      "de",
      "ja"
    ],
    "hardenedRuntime": true,
    "entitlements": "./buildResources/entitlements.mac.plist",
    "entitlementsInherit": "./buildResources/entitlements.mac.plist",
    "extendInfo": {
      "LSUIElement": 1,
      "ITSAppUsesNonExemptEncryption": false,
      "CFBundleLocalizations": [],
      "CFBundleDevelopmentRegion": "en",
      "NSWindowSupportsSwipeScrolling": true,
      "NSWindowSupportsAutomaticInlineTitle": true
    }
  },
  "linux": {
    "icon": "buildResources/icons/icon.icns",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "category": "Utility",
    "synopsis": "An electron template based on Vite and Esbuild.",
    "desktop": {
      "Name": "Natmri",
      "Type": "Application",
      "GenericName": "An electron template based on Vite and Esbuild."
    },
    "target": [
      "deb",
      "AppImage",
      "rpm",
      "tar.gz",
      "pacman"
    ]
  },
  "directories": {
    "app": "out-build/app",
    "buildResources": "buildResources",
    "output": "out-build"
  },
  "extraResources": [
    {
      "from": "assets",
      "to": "assets"
    }
  ],
  "publish": [
    {
      "provider": "github",
      "owner": "starknt",
      "repo": "natmri",
      "releaseType": "draft"
    }
  ]
}
