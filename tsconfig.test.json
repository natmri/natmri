{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": [
      "vitest/globals"
    ],
    "paths": {
      "natmri/*": [
        "./src/natmri/*"
      ]
    },
    "composite": true
  },
  "include": [
    "tests"
  ],
  "exclude": [
    "node_modules"
  ]
}
